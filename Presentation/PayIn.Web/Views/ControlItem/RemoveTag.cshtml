@using (Html.xpPopupPut(
	ControlItemFactory.RemoveTag,
	ControlItemFactory.RemoveTagApi,
	"",
	//ControlItemResources.RemoveTag,
	"resources.controlItem.removeTag",
	arguments: "{id:{{arguments.id}},tagId:{{arguments.tagId}}}"
))
