	<p translate="resources.controlItem.removeTagQuestion" translate-values="{ tagReference: '{{arguments.tagReference}}', name:'{{arguments.name}}' }">Do you want to remove the tag {{arguments.tagReference}} of the item {{arguments.name}}?</p>
}

