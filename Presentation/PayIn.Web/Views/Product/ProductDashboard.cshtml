					  }"
					class="inline m-t easyPieChart"
					style="width: 115px; height: 115px; line-height: 115px;"
				>
					<div>
						<span class="text-success h3">{{arguments.percentYear}}%</span>
					</div>
					<canvas width="230" height="230" style="width: 115px; height: 115px;"></canvas>
				</div>*@
			</div>
		</div>
		<table class="table table-hover" ng-show="data.length">
			<thead>
				<tr>
					<th translate="resources.product.name">Name</th>
					<th translate="resources.product.price">Price</th>
					<th translate="resources.product.lastVisits">Last day/week/month/year</th>
				</tr>
			</thead>
			<tbody>
				<tr ng-repeat="item in data">
					<td>@(Html.ColumnFor<ProductGetAllByDashboardResult>(x => x.Name))</td>
					<td>@(Html.ColumnFor<ProductGetAllByDashboardResult>(x => x.Price))</td>
					<td>
						@(Html.ColumnFor<ProductGetAllByDashboardResult>(x => x.LastDay)) /
						@(Html.ColumnFor<ProductGetAllByDashboardResult>(x => x.LastWeek)) /
						@(Html.ColumnFor<ProductGetAllByDashboardResult>(x => x.LastMonth)) /
						@(Html.ColumnFor<ProductGetAllByDashboardResult>(x => x.LastYear))
					</td>
				</tr>
			</tbody>
		</table>
	</div>
}