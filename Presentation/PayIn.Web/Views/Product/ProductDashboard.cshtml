@using PayIn.Web.App.Factories;
@using Xp.Common;
@using PayIn.Application.Dto.Payments.Results;

@using (Html.xpList(
				ProductFactory.GetAllByDashboardName,
				ProductFactory.GetAllByDashboardApi,
				"",
				"resources.mainResources.dashBoard",
				isTitleActive: true,
				initialSearch: true
			))
{
	<div class="table-responsive">
		<div class="row text-center padding">
			<div class="col-sm-3 col-xs-6">
				<div class="h2 m-b-sm">{{arguments.lastDay}}</div>
				<div>Último día <i class="fa fa-fw fa-caret-up text-success text-sm"></i></div>
				@*<div ui-jq="easyPieChart"
					 ui-options="{
						percent: {{arguments.percentDay}},
						lineWidth: 4,
						trackColor: '#e8eff0',
						barColor: '#7266ba',
						scaleColor: false,
						size: 115,
						rotate: 0,
						lineCap: 'butt'
					}"
					class="inline m-t easyPieChart"
					style="width:115px;height:115px;line-height:115px;"
				>
					<div>
						<span class="text-primary h3">{{arguments.percentDay}}%</span>
					</div>
					<canvas width="230" height="230" style="width: 115px; height: 115px;"></canvas>
				</div>*@
			</div>
			<div class="col-sm-3 col-xs-6">
				<div class="h2 m-b-sm">{{arguments.lastWeek}}</div>
				<div>Última semana <i class="fa fa-fw fa-caret-down text-warning text-sm"></i></div>
				@*<div
					ui-jq="easyPieChart"
					ui-options="{
						percent: {{arguments.percentWeek}},
						lineWidth: 4,
						trackColor: '#e8eff0',
						barColor: '#23b7e5',
						scaleColor: false,
						size: 115,
						rotate: 0,
						lineCap: 'butt'
					}"
					class="inline m-t easyPieChart"
					style="width: 115px; height: 115px; line-height: 115px;"
				>
					<div>
						<span class="text-info h3">{{arguments.percentWeek}}%</span>
					</div>
					<canvas width="230" height="230" style="width: 115px; height: 115px;"></canvas>
				</div>*@
			</div>
			<div class="col-sm-3 col-xs-6">
				<div class="h2 m-b-sm">{{arguments.lastMonth}}</div>
				<div>Último mes <i class="fa fa-fw fa-caret-up text-success text-sm"></i></div>
				@*<div
					ui-jq="easyPieChart"
					ui-options="{
						percent: {{arguments.percentMonth}},
						lineWidth: 4,
						trackColor: '#e8eff0',
						barColor: '#fad733',
						scaleColor: false,
						size: 115,
						rotate: 0,
						lineCap: 'butt'
					}"
					class="inline m-t easyPieChart"
					style="width:115px;height:115px;line-height:115px;"
				>
					<div>
						<span class="text-warning h3">{{arguments.percentMonth}}%</span>
					</div>
					<canvas width="230" height="230" style="width: 115px; height: 115px;"></canvas>
				</div>*@
			</div>
			<div class="col-sm-3 col-xs-6">
				<div class="h2 m-b-sm">{{arguments.lastYear}}</div>
				<div>Último año <i class="fa fa-fw fa-caret-down text-danger text-sm"></i></div>
				@*<div
					ui-jq="easyPieChart"
					ui-options="{
						percent: {{arguments.percentYear}},
						lineWidth: 4,
