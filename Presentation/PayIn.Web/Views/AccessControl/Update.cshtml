@using PayIn.Application.Dto.Payments.Arguments;
@using PayIn.Web.App.Factories;

@using (Html.xpPut(
    AccessControlFactory.Update,
    AccessControlFactory.UpdateApi,
    "",
    "resources.accessControl.update"
))
{
    <xp-get data-api="@AccessControlFactory.GetApi">
        <div class="panel panel-default" style="margin:-15px 0 15px 0">
            <div class="panel-heading font-bold" translate="resources.accessControl.enclosureInfo">Enclosure information</div>
            <div class="panel-body">
                <div class="col-md-12">
                    <div class="row">
                        @(Html.ArgumentFor<ApiAccessControlUpdateArguments>(x => x.Name))
                        @(Html.ArgumentFor<ApiAccessControlUpdateArguments>(x => x.Schedule))
                        @(Html.ArgumentFor<ApiAccessControlUpdateArguments>(x => x.MaxCapacity))
                        @(Html.ArgumentFor<ApiAccessControlUpdateArguments>(x => x.Map))
                    </div>
                </div>
            </div>
        </div>
    </xp-get>
}