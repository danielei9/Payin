@using PayIn.Application.Dto.Arguments.ControlFormArgument;
@using Xp.Common;
@using PayIn.Web.App.Factories;

@using (Html.xpPost(
	ControlFormArgumentFactory.Create,
	ControlFormArgumentFactory.CreateApi,
	"",
	//ControlFormArgumentResources.Create,
	"resources.controlForm.create",
	init:
		"scope.arguments.formId=params.formId;" +
		"scope.arguments.minOptions = 0;"
))
{
	@(Html.ArgumentFor<ControlFormArgumentCreateArguments>(x => x.Name))
	@(Html.ArgumentFor<ControlFormArgumentCreateArguments>(x => x.Observations))
	<div class="col-md-6">
		<div class="row">
			@(Html.ArgumentFor<ControlFormArgumentCreateArguments>(x => x.Type, width: 6))
			@(Html.ArgumentFor<ControlFormArgumentCreateArguments>(x => x.Order, width: 6))
		</div>
	</div>
	<div ng-show="arguments.type==11" class="col-md-6">
		<div class="row">
			@(Html.ArgumentFor<ControlFormArgumentCreateArguments>(x => x.MinOptions, width: 6))
			@(Html.ArgumentFor<ControlFormArgumentCreateArguments>(x => x.MaxOptions, width: 6))
		</div>
	</div>
	<div ng-show="arguments.type!=11" class="col-md-6">
		@(Html.ArgumentFor<ControlFormArgumentCreateArguments>(x => x.Required))
	</div>
}
